<div class="jumbotron">
  <div class="container">
    <h2 align="center">Reenviar instrucciones de desbloqueo</h2> 
  </div>
</div>


<%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="actions">
    <%= f.submit "Reenviar instrucciones de desbloqueo" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
