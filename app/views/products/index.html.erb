<div class="jumbotron">
  <div class="container">
    <h2 align="center">Productos</h2> 
  </div>
</div>

<div class="flex-section-container" >
	<div class="container">
		 <% @products.each_slice(4) do |row| %>			
		  <div class="row" id='products_row'>
		  <% row.each do |product|%>
			  <div class="col-md-3">
			    <%= image_tag product.photo, size: '250x250' %>
			    <p><%= product.name%></p>
				<p>$<%= product.price %></p>
				<%= link_to "Comprar", product_orders_path(product), class: 'btn btn-info', method: :post %>
			   </div>
		  	  <% end %>
	       </div>
	    <% end %>		
	</div>
</div>

