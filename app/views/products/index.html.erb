<div class="jumbotron">
  <div class="container">
    <h2 align="center">Productos</h2> 
  </div>
</div>

<div class="flex-section-container" >
	<div class="container">
		 <% @products.each_slice(4) do |row| %>			
		  <div class="row" id='products_row'>
		  <% row.each do |product|%>
			  <div class="col-md-3">
			    <%= image_tag product.photo, size: '250x250' %>
			    <p><%= product.name%></p>
				<p>$<%= product.price %></p>
				<%= link_to "Añadir", product_orders_path(product), class: 'btn btn-info', method: :post %>
			   </div>
		  	  <% end %>
	       </div>
	    <% end %>		
	</div>
</div>

<div class="jumbotron">
  <div class="container">
    <h2 align="center">Información</h2> 
  </div>
</div>

<footer id="footer">
	<div class="container">
		<div class="col-md-3">
			<div class="row">
				<%= form_for @contact do |f| %>
				<div class="row">
					<div class="col-md-6">
						<%= f.label :name, "Nombre" %><br>
						<%= f.text_field :name, required: true , class:'form-control' %>
					</div>
					<div class="col-md-6">
						<%= f.label :surname, "Apellido" %><br>
						<%= f.text_field :surname, required: true, class:'form-control' %>
					</div>
				</div>
				<div class="row">
					<div>
						<%= f.label :email, "Email" %><br>
						<%= f.text_field :email, required: true, class:'form-control' %>
					</div>
				</div>
				<div class="row">
					<div>
						<%= f.label :phone, "Teléfono" %><br>
						<%= f.text_field :phone, required: true, class:'form-control' %>
					</div>
				</div>
				<div class="row">
					<div>
						<%= f.label :message, "Mensaje" %><br>
						<%= f.text_area :message, required: true, class:'form-control' %>
					</div>
				</div>
				<div class="row">
					<div >
					<br>
						<%= f.submit "Enviar", class: 'btn btn-info', onclick:'limpiarFormulario()' %>
					</div>
				</div>	
			<% end %>
			</div>
		</div>
		
	
