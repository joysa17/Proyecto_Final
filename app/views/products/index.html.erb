<h1>Productos</h1>
<div class="container">
	<div class="row">
	 <% @products.each_slice(4) do |row| %>
	  <% row.each do |product|%>
		  <div class="col-md-3">
		  	<div class="card">
		  	 <%= image_tag product.photo, size: '200x200' %>
		  	  <div class="body">			 
				 <h5><%= product.name%></h5>
				 <p><%= product.price %></p>
				 <%= link_to "comprar", product_orders_path(product), class: 'btn btn-success', method: :post %>
			  </div>
			</div>
	       </div>
	  	  <% end %>
	  	<div class="w-100" style="margin-top:20px"></div>
	  <% end %>
	</div>
</div>

